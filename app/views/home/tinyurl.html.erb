<% if @tiny %>
    <%= "Tiny URL : #{@tiny}" %>
<% else %>
  <% form_tag do %>
      <table align="center" cellpadding="5" bgcolor="#E7E7F7">
        <tr>
            <td>
                <b>Enter a long URL to make <a href="http://tinyurl.com">tiny</a>:</b><br />
                <input type="text" name="url" size="30"><input type="submit" name="submit" value="Make TinyURL!">
            </td>
        </tr>
      </table>
  <% end %>
<% end %>
