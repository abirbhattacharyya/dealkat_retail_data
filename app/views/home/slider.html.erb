<%
    @title = "Do what if scenarios to understand your business impact"
    @sub_title = "First slider= # Of Units Sold;  Second Slider=% Margin Per Unit Sold"
%>



        <% form_tag  home_action_path("slider") do %>
	<div class="slidecont">
		<div class="box"><div id="slider" class="slider1"></div><div class="num"><%= text_field_tag "slider_input1", @slider_input1, :class => "numvalue" %></div></div> <!--input id="slider_input1" class="numvalue" type="text" value="1" readonly/-->
		<div class="box"><div id="slider" class="slider2"></div><div class="num"><%= text_field_tag "slider_input2", @slider_input2, :class => "numvalue" %></div></div> <!--input id="slider_input2" class="numvalue" type="text" value="1" readonly/-->
	</div>
        <%#= submit_tag "Go !!", :class => "block" %>
        <% end %>
        <span id="graph">
            <% for graph in @graphs %>
                <%= render :partial => "controls/graph", :object => graph.url, :locals => {:id => graph.id} %>
            <% end %>
        </span>
